@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear tipo de Cuenta</h1>
<h5>El tipo de cuenta se refiere a como podemos agrupar cuentas.
    Ejemplos: Prestamos, tarjetas de credito, etc.</h5>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form  asp-action="Crear">

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input type="text" asp-for="Nombre" class="form-control"/>
            <span asp-validation-for="Nombre" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Edad" class="form-label"></label>
            <input type="text" asp-for="Edad" class="form-control" />
            <span asp-validation-for="Edad" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="URL" class="form-label" ></label>
            <input type="text" asp-for="URL" class=form-control />
            <span asp-validation-for="URL" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TarjetaDeCredito" class=form-label></label>
            <input type="text" asp-for="TarjetaDeCredito" class=form-control />
            <span asp-validation-for="TarjetaDeCredito" class="alert-danger"></span>
        </div>
         
         <button type="submit" class="btn btn-primary">Enviar</button>  

    </form>   

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }