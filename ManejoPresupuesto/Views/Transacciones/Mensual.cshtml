@model ReporteMensualViewModel
@{
	ViewData["Title"] = "Reporte Mensual";
	int anoAnterior = Model.Ano - 1;
	int anoPosterior = Model.Ano + 1;
	var resumenMontos = new ResumenMontosViewModel()
			{
				Gastos = Model.Gastos,
				Ingresos = Model.Ingresos,
				Total = Model.Total
			};
}
<partial name="_Submenu" Model="SubMenuTransacciones.Mensal"/>

<h4>Mostrando transacciones de 
	<a asp-route-ano="@anoAnterior" class="btn btn-secondary" ><i class="bi-chevron-left"></i> </a>
	@Model.Ano
	<a asp-route-ano="@anoPosterior" class="btn btn-secondary" ><i class="bi-chevron-right"></i> </a>
</h4>
<partial name="_ResumenMontos" model="@resumenMontos" />

<table class="table" style="font-size: 20px">
	<thead>
		<tr style="background-color: lightblue">
			<th>Mes</th>
			<th style="text-align: right">Ingresos</th>
			<th style="text-align: right">Gastos</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var transaccionesPorMes in Model.TransaccionPorMes)
		{
			<tr>
				<td>
					<a style="text-decoration:  none;" asp-action="Index" asp-route-ano="@Model.Ano" asp-route-mes="@transaccionesPorMes.Mes">
						@transaccionesPorMes.FechaReferencia.ToString("MMM")
					</a>
				</td>
				<td class="activo" style="text-align: right">@transaccionesPorMes.Ingreso</td>
				<td class="pasivo" style="text-align: right">@transaccionesPorMes.Gasto</td>
			</tr>
		}
	</tbody>
</table>